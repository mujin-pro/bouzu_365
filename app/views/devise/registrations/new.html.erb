<div class="signup">
  <div class="signup-content">
    <h2 class="signup-logo">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="signup-form">
        <div class="row mb-3">
          <%= f.label :name, :class => "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control", placeholder: "太郎" %>
          <div class="name-dummy dummy-alart mt-2 text-info" id="name-dummy">入力をお願いします。</div>
          <div class="name-success mt-2 text-success" id="name-success">正しく入力されています。</div>
          <div class="name-error mt-2 text-danger" id="name-blank">空白が入力されています。</div>
          <div class="name-nil mt-2 text-info" id="name-nil">入力必須項目です。</div>
          </div>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, :class => "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", placeholder: "test@example.com" %>
          <div class="email-dummy dummy-alart mt-2 text-info" id="email-dummy">入力をお願いします。</div>
          <div class="email-success mt-2 text-success" id="email-success">正しく入力されています。</div>
          <div class="email-error mt-2 text-danger" id="email-error">半角英数字・記号で入力してください。</div>
          <div class="email-error mt-2 text-danger" id="email-blank">空白が入力されています。</div>
          <div class="email-nil mt-2 text-info" id="email-nil">入力必須項目です。</div>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, :class => "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", placeholder: "6文字以上で入力してください" %>
          <div class="password-dummy dummy-alart mt-2 text-info" id="password-dummy">入力をお願いします。</div>
          <div class="password-success mt-2 text-success" id="password-success">正しく入力されています。</div>
          <div class="password-error mt-2 text-danger" id="password-error">6文字以上の半角英数字で入力してください。</div>
          <div class="password-error mt-2 text-danger" id="password-blank">空白が入力されています。</div>
          <div class="password-nil mt-2 text-info" id="password-nil">入力必須項目です。</div>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password_confirmation, :class => "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", placeholder: "パスワードと同じ内容を入力してください" %>
          <div class="password-confirmation-dummy dummy-alart mt-2 text-info" id="password-confirmation-dummy">入力をお願いします。</div>
          <div class="password-confirmation-success mt-2 text-success" id="password-confirmation-success">正しく入力されています。</div>
          <div class="password-confirmation-error mt-2 text-danger" id="password-confirmation-error">パスワードと同じ内容を入力してください。</div>
          <div class="password-confirmation-error mt-2 text-danger" id="password-confirmation-blank">空白が入力されています。</div>
          <div class="password-confirmation-nil mt-2 text-info" id="password-confirmation-nil">入力必須項目です。</div>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :ミッション, :class => "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
          <%= f.text_area :mission, autofocus: true, autocomplete: "mission", :size => "100", :class => "mission form-control", placeholder: "朝活を始める理由（目標）を50文字以内で入力してください"%>
          <div class="mission-dummy dummy-alart mt-2 text-info" id="mission-dummy">入力は任意です。</div>
          <div class="mission-success mt-2 text-success" id="mission-success">入力ありがとうございます。</div>
          <div class="mission-error mt-2 text-danger" id="mission-error">50文字を超過しています。</div>
          <div class="mission-nil mt-2 text-secondary" id="mission-nil">入力は任意です。</div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", :class => "form-control btn-primary mt-4" %>
        </div>
      </div>
    <% end %>
  </div>
</div>