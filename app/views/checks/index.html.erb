<% if user_signed_in? %>
  <div class="index-content d-flex">
    <div class="index-user-content container mt-3">
      <h3 class="content2-heading text-uppercase mb-5 display-4"><%= current_user.name %>さん</h3>
      <h3 class="content2-subheading font-weight-light mb-2">ミッション</h3>
      <h4 class="content2-subheading font-weight-light mb-5"><%= current_user.mission %></h4>
      
      <div class="mb-2">
        <div class="border rounded text-center">
          <div class="check-content border-bottom pt-3 pb-3 bg-gradient text-white">
            <h5>チェックイン</h5>
          </div>
          <div class="mt-3 mb-3">
            <% if @check.present? %>
              前回のチェックイン：<%= @check.updated_at.strftime("%-m月%-d日 %-H時%M分") %>
            <% else %>
              チェックインデータはありません
            <% end %>
          </div>
          <div class="check-around-button d-flex">
            <%= link_to 'チェックイン', new_check_path, class: 'btn btn-primary bg-gradient mb-3' %>
            <% if @check.present? %>
              <%= link_to '再チェックイン', edit_check_path(@check), class: 'btn btn-primary bg-gradient mb-3' %><br/>
                <% if @check.updated_at.strftime("%-m月%-d日") == Date.today.strftime("%-m月%-d日") %>
                  <%= link_to 'チェックイン取り消し', check_path(@check), method: :DELETE, class: 'btn btn-primary bg-gradient mb-3' %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mb-2">
        <div class="border rounded text-center">
          <div class="check-content border-bottom pt-3 pb-3 bg-gradient text-white">
            <h5>チェックアウト</h5>
          </div>
          <div class="mt-3 mb-3">
            <% if @complete.present? %>
              前回のチェックアウト：<%= @complete.updated_at.strftime("%-m月%-d日 %-H時%M分") %>
