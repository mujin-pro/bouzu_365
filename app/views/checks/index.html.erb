<% if user_signed_in? %>
  <div class="main-content2 d-flex align-items-top text-center">
    <div class="container d-flex align-items-center flex-column">
      <h3 class="content2-heading text-uppercase mt-3 mb-5 display-4"><%= current_user.name %>さん</h3>
