                <% if @complete.updated_at.strftime("%-m月%-d日") == Date.today.strftime("%-m月%-d日") %>
                  <%= link_to 'チェックアウト取り消し', complete_path(@complete), method: :DELETE, class: 'btn btn-primary bg-gradient mb-3' %>
                <% end %>
            <% end %>
          </div>
        </div>
      </div>
