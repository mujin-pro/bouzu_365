      <h4 class="content2-subheading font-weight-light mb-5"><%= current_user.mission %></h4>
      
      <% if @check.present? %>
        <div class="mb-2">
          <%= @check.updated_at.strftime("%-m月%-d日 %-H時%M分") %>(チェックイン時間を表示するエリア)<br/>
          <%= link_to '再チェックイン', edit_check_path(@check) %><br/>
          <% if @check.updated_at.strftime("%-m月%-d日") == Date.today.strftime("%-m月%-d日") %>
            <%= link_to 'チェックイン取り消し', check_path(@check), method: :DELETE, class: 'btn btn-primary' %>
          <% end %>
        </div>
      <% end %>

